  "author": "Russ Renshaw <russ@minnowlabs.com>",
  "license": "MIT",
  "keywords": [
    "design-system",
    "react",
    "tailwind",
    "css",
    "ui-components",
    "design-tokens",
    "roy-g-biv",
    "color-palette",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MinnowRuss/anchovy-design-system.git"
  },
  "homepage": "https://github.com/MinnowRuss/anchovy-design-system#readme",
  "bugs": {
    "url": "https://github.com/MinnowRuss/anchovy-design-system/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./src/styles/index.css",
    "./theme": "./src/styles/theme.css",
    "./tokens": "./public/anchovy-design-tokens.json"
  },
  "files": [
    "dist",
    "src/styles",
    "src/app/components/ui",
    "src/app/components/figma",
    "public/anchovy-design-tokens.json",
    "README.md"
